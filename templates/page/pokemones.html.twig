{% extends "base.html.twig" %}
{% block title %} pokémons {% endblock %}
{% block main %}
    <main>
        <article class="blocArticle">

            {% for pokemon in pokemons %}

                {% if pokemon.isPublished %}
                    <section>
                        <h2 class="titre_jaune" >POKÉMON :</h2>
                        <p> {{ pokemon.title }}</p>
                        <p>{{ pokemon.content }}</p>
                        <div class="image_pokemon"><img src="{{ pokemon.image }}" alt="{{ pokemon.title }}"></div>

                    </section>
                {% endif %}

            {% endfor %}

        </article>
    </main>
{% endblock %}